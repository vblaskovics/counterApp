{
  "name": "counterapp",
  "version": "1.0.0",
  "description": "Counter Application",
  "main": "./dist/src/server.ts",
  "type": "module",
  "scripts": {
    "build:ts": "npx tsc",
    "build:ts:watch": "npx tsc --watch",
    "build:htmlcss": "node build.js",
    "build":"npm run build:ts && npm run build:htmlcss",
    "start": "node ./dist/server.js",
    "start:watch": "nodemon ./dist/server.js",
    "serve": "npx concurrently \"npm run build:ts:watch\" \"npm run start:watch\"",
    "test": "npx playwright test"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@libsql/client": "^0.5.6",
    "bootstrap": "^5.3.3",
    "express": "^4.18.3"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.3",
    "@playwright/test": "^1.42.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.4",
    "@types/supertest": "^6.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.0",
    "shelljs": "^0.8.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
